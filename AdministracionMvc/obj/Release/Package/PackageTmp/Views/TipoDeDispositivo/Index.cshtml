@model IEnumerable<Administracion.BusinessLayer.Dto.TipoDeDispositivo>

@{
    ViewBag.Title = "Tipo de dispositivo";
}

<div class="container">

    <h2>Tipo de dispositivos</h2>

    <p>
        @Html.ActionLink("Agregar", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a href="~/TipoDeDispositivo/Edit/@item.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }

    </table>

</div>